<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Calculator</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1>Calculator</h1>
      <input
        type="number"
        id="num1"
        class="form-control mb-2"
        placeholder="Enter first number"
      />
      <input
        type="number"
        id="num2"
        class="form-control mb-2"
        placeholder="Enter second number"
      />
      <button class="btn btn-primary mb-2" onclick="calculate('add')">
        Add
      </button>
      <button class="btn btn-primary mb-2" onclick="calculate('subtract')">
        Subtract
      </button>
      <button class="btn btn-primary mb-2" onclick="calculate('multiply')">
        Multiply
      </button>
      <button class="btn btn-primary mb-2" onclick="calculate('divide')">
        Divide
      </button>
      <button class="btn btn-primary mb-2" onclick="calculate('modulus')">
        Modulus
      </button>
      <div id="result"></div>
    </div>

    <% if (typeof operation !== 'undefined') { %>
    <div class="container mt-5">
      <h1>Result</h1>
      <p>Operation: <%= operation %></p>
      <p>Number 1: <%= num1 %></p>
      <p>Number 2: <%= num2 %></p>
      <p>The result is: <%= result %></p>
    </div>
    <% } %>

    <script src="/js/script.js"></script>
  </body>
</html>
